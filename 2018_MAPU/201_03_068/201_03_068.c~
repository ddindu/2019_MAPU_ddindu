#include <mega128a.h>
#include <delay.h>

#asm
    .equ __lcd_port = 0x15
#endasm

#include <lcd.h>
typedef unsigned char byte;

flash byte char0[64]=
{0x1f,0x1f,0x03,0x03,0x03,0x06,0x0c,0x00,
 0x1f,0x1f,0x04,0x04,0x04,0x04,0x04,0x00,
 0x1f,0x1f,0x11,0x11,0x11,0x11,0x1f,0x00,
 0x04,0x04,0x04,0x04,0x04,0x04,0x04,0x04,
 0x1f,0x1f,0x04,0x04,0x0a,0x11,0x11,0x11,
 0x04,0x04,0x04,0x1c,0x1c,0x04,0x04,0x04,
 0x10,0x10,0x10,0x10,0x10,0x1f,0x1f,0x00,
 0x04,0x04,0x04,0x07,0x07,0x04,0x04,0x04
};

void define_char(byte flash *pc.byte char_code){
    byte i,a;
    a = char_code | 0x40;
    for(i=0;i<64;i++) lcd_write_byte(a++,*pc++);
}
void main(void)
{
DDRC = 0xff;
PORTC = 0xff;
lcd_init(16);
lcd_clear();
define_char(char0,0);
lcd_gotoxy(0,0);
lcd_putchar(0);
lcd_gotoxy(1,0);
lcd_putchar(5);
lcd_gotoxy(2,0);
lcd_putchar(2);
lcd_gotoxy(3,0);
lcd_putchar(3);
lcd_gotoxy(4,0);
lcd_putchar(6);
lcd_gotoxy(5,0);
lcd_putchar(1);
lcd_gotoxy(6,0);
lcd_putchar(6);
lcd_gotoxy(7,0);
lcd_putchar(7);
lcd_gotoxy(7,1);
lcd_putchar(1);
lcd_gotoxy(8,0);
lcd_putchar(4);
lcd_gotoxy(9,0);
lcd_putchar(3);
while (1)
    {  
    
    }
}
